<!DOCTYPE html>
<html>
  <head>
    <title>Homework</title>
    <%= stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    </head>
    <body>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
              <%= link_to "Homework",customers_path,class:"navbar-brand"%>
          </div>
          <ul class="nav navbar-nav">
            <li><%= link_to "Edit Profile",edit_customer_registration_path%></li>
            <li><%= link_to "Book Cleaner",new_booking_path%></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>Welcome <%= current_customer.first_name %></li>
            <li><%= button_to destroy_customer_session_path,method:'delete',class:'btn btn-link' do%><span class="glyphicon glyphicon-log-out"></span>Logout<% end %></li>
          </ul>
        </div>
      </nav>
      <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
  </body>
</html>
