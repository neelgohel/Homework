<table class="table table-hover table-striped">
  <tr>
    <th>Cleaner Name</th>
    <th>City</th>
    <th>Date and Time</th>
    <th>Action</th>
  </tr>
  <% if @bookings == []%>
  <tr>
      <td colspan="4" align="center">No Records Found</td>
    </tr>
  <% else %>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.cleaner.first_name %> <%= booking.cleaner.last_name %></td>
      <td><%= booking.city.city_name %></td>
      <td><%= booking.datetime %></td>
      <td><%= link_to booking_path(booking.id) do%> <span class="glyphicon glyphicon-eye-open"/><% end %></td>
    </tr>
    <% end %>
  <% end %>
</table>
