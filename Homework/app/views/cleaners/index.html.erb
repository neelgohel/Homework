<%= button_to :"Add Cleaner",new_cleaner_path,method:'get' %><br/>
<table class="table table-hover table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Quality Score</th>
    <th>City</th>
    <th colspan="3">Action</th>
  </tr>
  <% if @cleaners == []%>
    <tr>
      <td colspan="7" align="center">No Records found.</td>
      </tr>
  <% else %>
    <% @cleaners.each do |cleaner| %>
    <tr>
     <td><%= cleaner.first_name%> <%= cleaner.last_name %></td>
     <td><%= cleaner.email%></td>
     <td><%= cleaner.quality_score%></td>
     <% city_names = []
     cleaner.cities.each{|city| city_names.push(city.city_name)} %>
     <td><%= city_names.join(',') %></td>
     <td><%= link_to cleaner_path(cleaner.id) do%><span class="glyphicon glyphicon-eye-open"/><% end %></td>
      <td><%= link_to edit_cleaner_path(cleaner.id) do%><span class="glyphicon glyphicon-pencil"/><% end %></td>
      <td><%= link_to cleaner_path(cleaner.id),method:'delete',data:{confirm:'Are you sure?'} do%><span class="glyphicon glyphicon-trash"/><% end %></td>
    </tr>
    <% end %>
  <% end %>
</table>
