    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :quality_score %><br>
    <%= f.text_field :quality_score %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :"City:" %><br>
        <% @city.each do |city| %>
            <% if @cities.include?city.id %>
              <%= check_box_tag 'city_ids[]',city.id,checked:true %>
              <%= h city.city_name %></br>
            <%else%>
              <%= check_box_tag 'city_ids[]', city.id %>
              <%= h city.city_name %></br>
            <% end %>
        <% end %>
  </div>
